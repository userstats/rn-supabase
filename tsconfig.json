{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "skipDefaultLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["../../node_modules", "dist", "node_modules"]
}
